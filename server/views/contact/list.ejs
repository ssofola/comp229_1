<!doctype html>
<html lang="en">
<!-- Page Header -->
<%- include ../partials/header.ejs %>
<body>
<!-- Main Navigation -->
<%- include ../partials/main_nav.ejs %>
<!-- Main Section -->
<section class="bg-light pb-5 pt-5 text-secondary" data-pg-collapsed>
    <div class="container pb-5 pt-5">
        <h2><%= title %></h2>
        <div class="table-responsive" data-pg-collapsed>
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th scope="col">Contact Name</th>
                        <th scope="col">Contact Number</th>
                        <th scope="col">Email</th>
                        <% if(typeof displayName == 'string' && displayName){ %>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        <% } %>
                    </tr>
                </thead>
                <tbody>
                    <% for(let count = 0; count < BizContactList.length; count++){ %>
                        <tr>
                            <td><%= BizContactList[count].contact_name%></td>
                            <td><%= BizContactList[count].contact_number%></td>
                            <td><%= BizContactList[count].email%></td>
                            <% if(typeof displayName == 'string' && displayName){ %>
                                <td>
                                    <a href="/biz-contact-list/edit/<%= BizContactList[count].id %>" class="btn btn-primary"><i class="fa-solid fa-pencil"></i> Edit</a>
                                </td>
                                <td>
                                    <a href="/biz-contact-list/delete/<%= BizContactList[count].id %>" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Delete</a>
                                </td>
                            <% } %>
                        </tr>
                    <%}%>
                </tbody>
            </table>
        </div>
    </div>
</section>
<!-- Footer Section -->
<%- include ../partials/footer.ejs %>
<!-- Scripts Section -->
<%- include ../partials/scripts.ejs %>
</body>
</html>